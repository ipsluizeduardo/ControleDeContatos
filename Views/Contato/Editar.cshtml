@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-control-lg">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome do contato!">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-control-lg">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o e-mail do contato!">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-control-lg">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" asp-for="Celular" placeholder="Digite o celular do contato!">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <button type="submit" class="btn btn-primary btn-sm w-100"> Alterar </button>
    <a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

